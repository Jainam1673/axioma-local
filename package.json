{
  "name": "axioma-local",
  "private": true,
  "version": "0.1.0",
  "packageManager": "bun@1.3.5",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "bun run --concurrent dev:backend dev:frontend",
    "dev:backend": "bun run --filter @axioma/backend start:dev",
    "dev:frontend": "bun run --filter @axioma/frontend dev",
    "build": "bun run build:backend && bun run build:frontend",
    "build:backend": "bun run --filter @axioma/backend build",
    "build:frontend": "bun run --filter @axioma/frontend build",
    "test": "bun run --filter @axioma/backend test",
    "lint": "bun run lint:backend && bun run lint:frontend",
    "lint:backend": "bun run --filter @axioma/backend lint",
    "lint:frontend": "bun run --filter @axioma/frontend lint",
    "format": "bun run --filter @axioma/backend format && bun run --filter @axioma/frontend format"
  }
}
