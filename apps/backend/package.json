    "@nestjs/platform-express": "^11.1.14",
    "@prisma/client": "^7.4.0",
    "bcrypt": "^6.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "decimal.js": "^10.6.0",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
